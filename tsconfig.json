{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    //"src/**/*.ts",
    "src/**/*.vue",
    //"src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
